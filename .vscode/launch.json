    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/ConsoleApp/bin/Debug/netcoreapp2.2/ConsoleApp.dll",
            "args": [
                "John"
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": ".NET Core Launch (tests)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-tests",
            "program": "${workspaceFolder}/tests/ConsoleTests/bin/Debug/netcoreapp2.2/ConsoleTests.dll",
            "args": [
                ""
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
    ]
}